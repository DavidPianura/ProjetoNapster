package napster;

import java.io.File;
import java.util.ArrayList;

public class NapsterMessage {
	private String request;
	private static ArrayList<String> properties;
	
	public NapsterMessage(String request, ArrayList<String> properties) {
		this.request = request;
		this.properties = properties;
	}
	
	public static ArrayList<String> getInfosFolder(String folder) {
		
		File diretorio = new File(folder);
		ArrayList<String> arquivos = new ArrayList<>();
		
		for (File file:diretorio.listFiles()) {
			arquivos.add(file.getName());
		}
		return arquivos;
		
	}
	
}
